<?xml version="1.0" encoding="utf-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="matricula">
    <xs:simpleType>
      <xs:restriction base="xs:string">
        <xs:pattern value="[0-9]{4}[A-Z]{3}"/>
      </xs:restriction>
    </xs:simpleType>
  </xs:element>

</xs:schema>